{% extends "base.html.twig" %}

{% block title %}Vos réservations passées et futures
{% endblock %}

{% block body %}
	<h1>Mes réservations</h1>
	<div class="alert alert-info mt-3">
		<p>Retrouvez ci dessous vos réservations passées et futures.</p>
	</div>

	{% for booking in app.user.bookings %}
		<div class="row mt-3">
			<div class="col-4"><img src="{{booking.ad.coverImage}}" alt="photo de l'annonce {{booking.ad.title}}" class="img-fluid"></div>
			<div class="col-8">
				<h4>
					{{booking.ad.title}}
				</h4>
				<p>
					Réservation
					<strong>n°{{booking.id}}</strong><br>
					Du
					{{booking.startDate|date('d/m/Y')}}
					au
					{{booking.endDate|date('d/m/Y')}}
					({{booking.amount}}
					&euro;)</p>
				<a href="{{ path('booking_show', {'id': booking.id})}}" class="btn btn-info">Plus d'informations</a>
			</div>
		</div>
	{% endfor %}


{% endblock %}
