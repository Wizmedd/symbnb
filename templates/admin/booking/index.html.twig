{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">
			<i class="fas fa-folder"></i>
			Administration des réservations
		</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date de création</th>
					<th>Visiteur</th>
					<th>Question du visiteur</th>
					<th>Hôte</th>
					<th>Annonce</th>

					<th>Durée en nuit(s)</th>
					<th>Montant</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for booking in bookings %}


					<tr>
						<td>{{booking.id}}</td>
						<td>{{booking.createdAt | date('d/m/Y H:i') }}</td>
						<td><img class="avatar avatar-micro" src="{{booking.booker.picture}}" alt="avatar de {{booking.booker.fullName}}">{{booking.booker.fullName}}</td>
						<td>{{booking.comment}}</td>
						<td><img class="avatar avatar-micro" src="{{booking.ad.author.picture}}" alt="avatar de {{booking.ad.author.fullName}}">{{booking.ad.author.fullName}}</td>
						<td>{{booking.ad.title}}</td>

						<td>{{booking.getDuration}}</td>
						<td>{{booking.amount}}
							€</td>
						<td>
							<a href="{{path('admin_booking_edit', {'id': booking.id})}}" class="btn btn-primary">
								<i class="fas fa-pen"></i>
							</a>
							<a href="{{path('admin_booking_delete', {'id': booking.id})}}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
