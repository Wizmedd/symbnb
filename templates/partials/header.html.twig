<header class="sticky-top shadow">

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path('homepage') }}"><img src="/images/esperate.png"></a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor03">
				<ul class="navbar-nav me-auto">

					<li class="nav-item">
						<a class="nav-link" href="{{ path('ads_index') }}">Liste
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('ads_map') }}">Carte
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('ads_search') }}">Rayon
						</a>
					</li>
				</ul>


				<ul class="navbar-nav" ml-auto>
					{% if app.user %}
						<li class="nav-item dropdown">
							<a href="#" id="dropdownMenuLink" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="{{ app.user.picture}}" alt="Avatar de {{app.user.fullName}}" class="avatar avatar-mini">
								{{app.user.fullName}}
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
								<a href="{{path('ads_create')}}" class="dropdown-item">
									<strong>Créer une annonce</strong>
								</a>
								<div class="dropdown-divider"></div>
								<a href="{{path('account_index')}}" class="dropdown-item">Mon compte</a>
								<a href="{{path('account_bookings')}}" class="dropdown-item">Mes réservations</a>
								<a href="{{path('account_profile')}}" class="dropdown-item">Modifier mon profil</a>
								<div class="dropdown-divider"></div>
								<a href="{{path('account_logout')}}" class="dropdown-item">Déconnexion</a>

							</div>
						</li>

					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('account_register')}}">S'inscrire</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('account_login')}}">Se connecter</a>
						</li>

					{% endif %}

				</ul>

			</div>
		</div>
	</nav>

	{% for label, messages in app.flashes %}
		<div class="container">
			<div class="alert alert-{{label}}">
				{% for message in messages %}
					<p>{{ message | raw }}</p>
				{% endfor %}
			</div>
		</div>
	{% endfor %}

</header>
