<div class="col-md-4">
	<div class="card bg-light mb-3">
		<div class="card-header text-center">
			{{ ad.rooms }}
			chambres,
			{{ad.city }}
			<strong>{{ ad.price }}
				â‚¬</strong>
		</br>
		<small>pas de commentaire</small>

	</div>
	<a href="{{ url }}">
		<img src="{{ad.coverImage}}" alt="image du placehold" style="height: 200px; width:100%; display:block">
